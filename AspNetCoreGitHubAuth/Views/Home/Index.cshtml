@model AspNetCoreGitHubAuth.Views.Home.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-action="Login" asp-controller="Account" class="btn btn-default">Log In with GitHub</a>
        }
        else
        {
            <div class="row">
                <div class="col-md-12">
                    <a asp-action="Logout" asp-controller="Account" class="btn btn-default">Log Out</a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <img src="@Model?.GitHubAvatar" alt="" class="img-thumbnail" />
                </div>
                <div class="col-md-10">
                    <h4>@Model?.GitHubName</h4>
                    <p><i class="fab fa-github"></i><a href="@Model?.GitHubUrl">@Model?.GitHubLogin</a></p>
                </div>
            </div>
        }
    </div>
</div>